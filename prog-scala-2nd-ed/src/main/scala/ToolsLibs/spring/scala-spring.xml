<!-- code-examples/ToolsLibs/spring/scala-spring.xml -->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <bean id="factory" class="toolslibs.spring.NamedObjectFactory$">
    <property name="nameOfFactory" value="Factory for Named Objects" />
  </bean>

  <bean id="factoryUsingBean" class="toolslibs.spring.FactoryUsingBean">
    <constructor-arg ref="factory" />
  </bean>
</beans>

